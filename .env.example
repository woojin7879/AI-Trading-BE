# API Keys
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # 종이 거래용 URL

# Trading Parameters
TRADING_MODE=paper  # paper 또는 live
MAX_POSITION_SIZE=5000  # 최대 포지션 크기 (USD)
RISK_PER_TRADE=0.02  # 거래당 리스크 (계좌의 %)
STOP_LOSS_PERCENTAGE=0.02  # 손절매 비율

# Model Parameters
MODEL_VERSION=v1
MODEL_PATH=models/

# Database
DB_PATH=data/trading.db

# Logging
LOG_LEVEL=INFO
LOG_PATH=logs/ 